{
  "lexicon": 1,
  "id": "app.bsky.purchase.getSubscriptionGroup",
  "defs": {
    "main": {
      "type": "query",
      "description": "Gets a subscription group and its offerings for the target platform. Requires auth.",
      "parameters": {
        "type": "params",
        "required": ["group", "platform"],
        "properties": {
          "group": { "type": "string" },
          "platform": { "type": "string" }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [],
          "properties": {
            "group": { "type": "string" },
            "offerings": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#offering"
              }
            }
          }
        }
      }
    },
    "offering": {
      "type": "object",
      "required": [],
      "properties": {
        "id": { "type": "string" },
        "platform": { "type": "string" },
        "product": { "type": "string" }
      }
    }
  }
}
